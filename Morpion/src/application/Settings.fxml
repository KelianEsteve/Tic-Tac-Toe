<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SettingsController" style="-fx-background-color: #240c76;">
   <left>
      <VBox prefHeight="289.0" prefWidth="20.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefHeight="289.0" prefWidth="20.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox prefHeight="333.0" prefWidth="377.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="96.0" prefWidth="206.0" text="F :" />
                  <TextArea fx:id="f1" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="f2" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="f3" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="96.0" prefWidth="206.0" text="M :" />
                  <TextArea fx:id="m1" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="m2" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="m3" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="96.0" prefWidth="206.0" text="D :" />
                  <TextArea fx:id="d1" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="d2" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="d3" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox prefHeight="44.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="585.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="validateButton" mnemonicParsing="false" text="Valider" onAction="#validateSettings" style="-fx-background-color: #831187;"/>
            <Button fx:id="closeButton" mnemonicParsing="false" text="Fermer" onAction="#closeSettings" style="-fx-background-color: #831187;" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
